#!/usr/bin/env ruby

sub_cmd = ARGV.shift
sub_cmd_lib = File.expand_path File.join('..', 'lib', 'miq_performance', 'commands'),
                               File.dirname(__FILE__)

case sub_cmd
when "analyze"
  require "#{sub_cmd_lib}/analyze"

  MiqPerformance::Commands::Analyze.run ARGV
when "benchmark"
  require "#{sub_cmd_lib}/benchmark"

  MiqPerformance::Commands::Benchmark.run ARGV
when "clean"
  require "#{sub_cmd_lib}/clean"

  MiqPerformance::Commands::Clean.run ARGV
when "report"
  require "#{sub_cmd_lib}/report"

  MiqPerformance::Commands::Report.run ARGV
else
  require "#{sub_cmd_lib}/help"

  MiqPerformance::Commands.help
end
